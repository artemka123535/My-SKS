<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecurityActivity">

    <TextView
        android:id="@+id/code"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="Использование кода-пароля"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Switch
        android:id="@+id/switch_code"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:background="@drawable/my_button_bg"
        android:gravity="left|center_vertical"
        android:text="   Использовать код-пароль"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/code" />

    <Button
        android:id="@+id/button"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:background="@drawable/my_button_bg"
        android:gravity="left|center_vertical"
        android:text="   Изменить код-пароль"
        android:drawableRight="@drawable/strelka"
        android:textAllCaps="false"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/switch_code" />

</androidx.constraintlayout.widget.ConstraintLayout>